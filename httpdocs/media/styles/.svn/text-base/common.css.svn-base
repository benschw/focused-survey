body {
	margin: 0;
	padding: 0;
	font-family: arial, sans-serif;
}
input, textarea {
	border: 1px solid #cccccc;
	background-color: #fefefe;
}
input.error, textarea.error {
	border: 1px solid #ff0000;
	background-color: #F8E0E0;
}

#loading {
	width: 20px;
	height: 20px;
}

fieldset {
	border: 1px solid #cccccc;
}
fieldset legend {
	color: #cccccc;
} 
.clear {
	clear: both;
}
.hidden {
	display: none;
	opacity: 0;
	position: absolute;
}
.visible {
	opacity: 1;
}
.note {
	font-size: 13px;
	font-style: italic;
}
#frame {
	width: 698px;
	margin: 10px auto 0 auto;
	border: 1px solid #1b1b1b;
}

.instructions {
	text-align: center;
	font-size: 20px;
}

