.hidden {
	opacity: 0;
	position: absolute;
}
.visible {
	opacity: 1;
}


input.calendar,
select.calendar {
	width: 99px;
}

button.calendar {
	background: url(/media/images/calendar-icon.png);
	cursor: pointer;
	border: 0;
	height: 22px;
	margin-left: 15px;
	width: 22px;
}
button.calendar:hover,
button.calendar.active {
}

div.calendar {
	border: 1px solid #cccccc;
	background-color: #eeeeee;
	height: 195px;
	padding: 0 6px;
	text-align: center;
	width: 147px;
}	
	div.calendar * {
		margin: 0;
		padding: 0;
	}	
	div.calendar div {
		background: none !important;
		cursor: move;
		height: 185px;
		overflow: hidden;
		padding-top: 10px;
		position: relative;
		width: 147px;
	}	
	
	div.calendar caption {
		color: #333;
		font: normal 12px/16px Arial, Helvetica, sans-serif;
		padding-top: 6px;
		text-align: center;
		width: 100%;
	}
	div.calendar caption a {
		cursor: pointer;
		display: block;
		height: 15px;
		overflow: hidden;
		position: absolute;
		text-indent: -100px;
		top: 12px;
		width: 15px;
	}
	div.calendar caption a.prev {
		background-image: url(/media/images/left-arrow.png);
		left: 0;
	}
	div.calendar caption a.next {
		background-image: url(/media/images/right-arrow.png);
		right: 0;
	}
	div.calendar caption a:hover {
	}
	div.calendar caption span {
		height: 25px;
		position: relative;
		text-align: center;
	}
	div.calendar caption span.month {
		padding-right: 8px;
	}
	div.calendar caption span.month:after {
		content: ',';
	}

	div.calendar table {
		background: #ffffff;
		border: 0;
		border-collapse: collapse;
		border-spacing: 0;
		cursor: default;
		margin: 0 auto;
		overflow: hidden;
		width: 147px;
	}
	div.calendar td,
	div.calendar th {
		border: 0;
		color: #1b1b1b;
		font: normal 12px Arial, Helvetica, sans-serif;
		height: 21px;
		text-align: center;
		width: 21px;
	}
	div.calendar td {
		color: #000000;
		font-size: 11px;
	}
	div.calendar td.invalid {
		border: 1px solid #eeeeee;
		color: #999;
	}
	div.calendar td.valid {
		border: 1px solid #cccccc;
		cursor: pointer;
	}
	div.calendar td.hilite {
	}
	div.calendar td.inactive {
	}
	div.calendar td.active,
	div.calendar td.hover {
		background-color: #cccccc;
		cursor: pointer;
	}