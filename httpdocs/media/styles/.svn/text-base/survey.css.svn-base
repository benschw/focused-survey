/* Common ================================================================= */
#frame {
	border: 0;
	width: 650px;
}
#footer {
	text-align: right;
	border-top: 1px solid #b2df37;
	margin: 35px 0 0 0;
}
	#footer a {
		color: #000000;
		font-size: 14px;
	}

.surveyDescription {
	font-size: 15px;
	text-align: center;
	color: #778659;
	padding-bottom: 10px;
	margin-bottom: 20px;
	border-bottom: 2px solid #9FB961;
}
/* Phase1 ================================================================= */

	fieldset.addEntry {
		border: 0;
		margin: 0 0 0 75px;
	}
	fieldset.addEntry .note {
		display: block;
	}
	fieldset.addEntry textarea {
		width: 495px;
		height: 30px;
		margin-right: 10px;
		border: 3px solid #555559;
	}

#entryList {
	margin: 0;
	padding: 0;
	list-style: none;
}
	#entryList .entry {	
		margin: 10px 0;
		padding: 5px 14px;
		border: 2px solid #9FB961;
	}
	#entryList .new {
		background-color: #FFCC00;
	}

#addEntry {
	cursor: pointer;
}

/* Phase2 ================================================================= */
#submitRatings {
	float: right;
}
#entryList .entry .content {
	border-bottom: 2px solid #9FB961;
}
#entryList .entry .disagree, #entryList .entry .agree {
	float: left;
	font-size: 14px;
	margin-top: 10px;
}
#entryList .entry .disagree {
	width: 115px;
	margin-right: 15px;
	text-align: right;
}
#entryList .entry .agree {
	width: 115px;
	margin-left: 15px;
	text-align: left;
}
#entryList fieldset {
	margin: 0;
	padding: 0;
	border: 0;
	font-size: 14px;
}
#entryList fieldset .noOpinion {
	margin-left: 10px;
	border-left: 2px solid #9FB961;
	padding-left: 10px;
}
