<fieldset>
	<div class="content">
		<h2>Set Password</h2>
		<p>You have successfully logged in using a temporary password. Please change it now before continuing.</p>

		<label for="password">New Password</label>
		<input class="float" type="password" id="password" name="password" />
		<div class="clear"></div>

		<label for="password">Confirm Password</label>
		<input class="float" type="password" id="password2" name="passwordConfirm" />
		<div class="clear"></div>

		<input type="submit" id="performReset" name="reset" value="Change" class="button" />
	</div>
</fieldset>